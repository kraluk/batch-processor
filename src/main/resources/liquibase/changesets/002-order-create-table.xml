<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="Create order table" author="Łukasz Krauzowicz">

        <createTable tableName="orders">

            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="business_id" type="uuid">
                <constraints primaryKey="true"/>
            </column>

            <column name="value" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="text">
                <constraints nullable="true"/>
            </column>

            <column name="version" type="bigint" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()"> <!-- https://github.com/jOOQ/jOOQ/issues/10802 -->
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="read_at" type="timestamptz" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createIndex indexName="idx_orders_business_id"
                     tableName="orders"
                     unique="true">
            <column name="business_id"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>